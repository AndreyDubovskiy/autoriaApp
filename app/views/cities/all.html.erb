<h1>Міста </h1>
<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  </thead>

  <tbody>
  <% @cities.each do |city| %>
    <tr>
      <td><%= city.id %></td>
      <td><%= city.name %></td>
      <td><%= link_to 'Редагувати', cities_edit_path+"?id="+city.id.to_s, class: "link2" %></td>
      <td><%= link_to 'Видалити',cities_delete_path+"?id="+city.id.to_s, method: :delete, data: { turbo_method: "delete" }, class: "link2" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to "Нове місто", cities_new_path, class: "link" %>