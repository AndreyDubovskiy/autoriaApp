<div class="content">
<h1>Edit</h1>


    <%= form_tag users_edit_path+"?id="+@tmp.id.to_s do %>
        <input type="text" name="name" placeholder="title" value="<%= @tmp.name %>"><br>
        <input type="text" name="surname" placeholder="text" value="<%= @tmp.surname %>"><br>
        <input type="text" name="pobatkovi" placeholder="text" value="<%= @tmp.pobatkovi %>"><br>
        <input type="text" name="phone" placeholder="text" value="<%= @tmp.phone %>"><br>
        <select name="city_id">
          <% City.all.each do |marka| %>
            <option value=<%= marka.id %>><%= marka.name %></option>
          <% end %>
        </select>
        <%= submit_tag 'Зберегти', class: "content"%>
    <% end %>

</div>