<h1>all </h1>
<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  </thead>

  <tbody>
  <% @colors.each do |color| %>
    <tr>
      <td><%= color.id %></td>
      <td><%= color.name %></td>
      <td><%= link_to 'Редагувати', colors_edit_path+"?id="+color.id.to_s, class: "link2" %></td>
      <td><%= link_to 'Видалити',colors_delete_path+"?id="+color.id.to_s, method: :delete, data: { turbo_method: "delete" }, class: "link2" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to "Новий статус", colors_new_path, class: "link" %>